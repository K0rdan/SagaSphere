{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["async-await", "react"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "brace-style": ["error", "1tbs"],
    "comma-dangle": ["error", "never"],
    "indent": "off",
    "max-len": "off",
    "no-plusplus": "off",
    "quotes": ["error", "double"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "spaced-comment": "off",
    "object-curly-newline": "off",
    "no-extra-parens": "off",
    "no-mixed-operators": "off"
  }
}
