{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "brace-style": ["error", "stroustrup"],
    "comma-dangle": ["error", "never"],
    "indent": "off",
    "max-len": "off",
    "no-plusplus": "off",
    "quotes": ["error", "double"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "spaced-comment": "off"
  }
}